<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="pengyi.domain.model.user.Terrace" table="t_terrace" lazy="true">
        <id name="id" type="java.lang.String" column="id" unsaved-value="-1" length="32">
            <generator class="uuid"/>
        </id>

        <property name="version" type="java.lang.Integer" column="version" />

        <one-to-one name="baseUser" class="pengyi.domain.model.user.BaseUser"  />

        <property name="name" column="name" type="java.lang.String" length="10"/>

    </class>

</hibernate-mapping>