<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="pengyi.domain.model.user.User" table="t_user" lazy="true">
        <id name="id" type="java.lang.String" column="id" unsaved-value="-1" length="32">
            <generator class="uuid"/>
        </id>

        <version name="version" type="java.lang.Integer" column="version" />

        <one-to-one name="baseUser" class="pengyi.domain.model.user.BaseUser"  />

        <property name="name" column="name" type="java.lang.String" length="10"/>

        <property name="head" column="head" type="java.lang.String" />

        <property name="sex" column="sex" type="java.lang.Integer" />

        <property name="integral" column="integral" type="java.lang.Integer" />

        <property name="money" column="money" type="java.math.BigDecimal" scale="2" />

        <property name="reportCount" column="reportCount" type="java.lang.Integer" />

    </class>

</hibernate-mapping>