<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="pengyi.domain.model.user.Company" table="t_company" lazy="true">
        <id name="id" type="java.lang.String" column="id" unsaved-value="-1" length="32">
            <generator class="uuid"/>
        </id>

        <property name="version" type="java.lang.Integer" column="version" />

        <one-to-one name="baseUser" class="pengyi.domain.model.user.BaseUser"  />

        <property name="name" column="name" type="java.lang.String" length="10"/>

        <property name="folder" column="folder" type="java.lang.String" />

        <property name="registerDate" column="register_date" type="java.lang.String" length="19" />

        <many-to-one name="registerAddress" column="register_address" class="pengyi.domain.model.area.Area" fetch="join" />

        <many-to-one name="operateAddress" column="operate_address" class="pengyi.domain.model.area.Area" fetch="join" />

        <property name="level" column="level" type="java.lang.Double" />
    </class>

</hibernate-mapping>