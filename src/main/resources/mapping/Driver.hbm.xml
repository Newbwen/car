<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="pengyi.domain.model.user.Driver" table="t_driver">
        <id name="id" type="java.lang.String" column="id" unsaved-value="-1" length="32">
            <generator class="uuid"/>
        </id>

        <property name="version" type="java.lang.Integer" column="version" />

        <one-to-one name="baseUser" class="pengyi.domain.model.user.BaseUser"  />

        <property name="name" column="name" type="java.lang.String" length="10"/>

        <property name="head" column="head" type="java.lang.String" />

        <many-to-one name="company" column="comapny_id" class="pengyi.domain.model.user.Company" />

        <property name="sex" column="sex" type="java.lang.Integer" />

        <property name="level" column="level" type="java.lang.Double" scale="2" />

        <property name="longitude" column="longitude" type="java.lang.Double" scale="6" />

        <property name="latitude" column="latitude" type="java.lang.Double" scale="6" />

        <property name="status" column="status" type="java.lang.Boolean" />

        <property name="reportCount" column="reportCount" type="java.lang.Integer" />

        <property name="online" column="online" type="java.lang.Boolean" />

        <property name="type" column="type" type="java.lang.Integer" />
    </class>

</hibernate-mapping>