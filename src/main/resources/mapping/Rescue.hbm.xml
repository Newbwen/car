<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="pengyi.domain.model.rescue.Rescue" table="t_rescue">
        <id name="id" type="java.lang.String" column="id" unsaved-value="-1" length="32">
            <generator class="uuid"/>
        </id>

        <property name="version" type="java.lang.Integer" column="version" />

        <many-to-one name="applyUser" column="apply_user_id" class="pengyi.domain.model.user.BaseUser" fetch="join" />

        <property name="applyTime" column="apply_time" type="java.lang.String" length="19" />

        <property name="type" column="type" type="java.lang.Integer" />

        <property name="description" column="description" type="java.lang.String" />

        <many-to-one name="driver" column="driver_id" class="pengyi.domain.model.user.Driver" />

        <property name="rescueTime" column="rescue_time" type="java.lang.String" length="19"/>

        <property name="status" column="status" type="java.lang.Integer" />

        <property name="finishTime" column="finish_time" type="java.lang.String" length="19" />
    </class>

</hibernate-mapping>