<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="pengyi.domain.model.user.BaseUser" table="t_base_user" lazy="true">
        <id name="id" type="java.lang.String" column="id" unsaved-value="-1" length="32">
            <generator class="uuid"/>
        </id>

        <property name="version" type="java.lang.Integer" column="version" />

        <property name="phone" column="phone" type="java.lang.String" length="11"/>

        <property name="status" column="status" type="java.lang.Boolean" />

        <property name="balance" column="balance" type="java.math.BigDecimal" scale="2"  />

        <property name="createDate" column="create_date" type="java.lang.String" length="19"/>

        <many-to-one name="userRole" column="role_id" class="pengyi.domain.model.role.Role" cascade="none" fetch="join" />

        <property name="email" column="email" type="java.lang.String" />

        <property name="type" type="java.lang.Integer" column="type" />

    </class>

</hibernate-mapping>